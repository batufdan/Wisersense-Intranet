@page
@model EditNewsModel
@{
    ViewData["Title"] = "Edit News";
    Layout = "_AdminTaskLayout";
}

<link rel="stylesheet" href="~/css/editUser.css">

<div class="userTable">
    <table>
        <tr>
            <th>Name</th>
            <th>Author</th>
            <th>Date</th>
            <th>Category</th>
            <th></th>
            <th></th>
        </tr>
        
        @foreach(var news in @Model.News) {
            <tr>
                <td>@news.name</td>
                <td>@news.author</td>
                <td>@news.date</td>
                <td>@news.category</td>
                <td><a asp-page="" asp-route-type="edit" asp-route-sendName="@news.name"><i class="fas fa-edit"></i></a></td>
                <td><a asp-page="" asp-route-type="delete" asp-route-sendName="@news.name"><i class="fa fa-trash" aria-hidden="true"></i></a></td>
            </tr>
        }
    </table>
</div>