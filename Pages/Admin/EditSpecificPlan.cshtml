@page
@model EditSpecificPlanModel
@{
    ViewData["Title"] = "Edit Plan Page";
    Layout = "_EditPlanLayout";
}

<link rel="stylesheet" href="~/css/addUser.css">

<div class="add_user_form">
    <h2>Edit Plan</h2>
	<div class="container">
		<form method="post">
			<div class="title">
				<h2>Plan Information</h2>
			</div> 
			<div class="infoBox">
				<div class="info">
					<label class="form-label" for="name">Name</label> 
					<input type="text" class="form-control" name="name" value="@Model.temp.name" readonly> 
				</div>
				<div class="info">
					<label class="form-label" for="date">Date</label>
					<input type="text" class="form-control" name="date" value="@Model.temp.date">
				</div>
				<div class="info">
					<label class="form-label" for="time">Time</label>
					<input type="text" class="form-control" name="time" value="@Model.temp.time">
				</div>
				<div class="info">
					<label class="form-label" for="type">Type</label>
					<input type="text" class="form-control" name="type" value="@Model.temp.type">
				</div>
				<div class="btnBox">
					<button class="btn" type="submit" name="adminTask" value="updatePlan">Save Plan</button>
				</div>
			</div>
		</form>
	</div>
</div>